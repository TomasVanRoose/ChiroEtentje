
<h4>Voeg een nieuw product toe</h1>

<%= bootstrap_form_for(@product)  do |f| %>

	<%= f.text_field :name, label: "Naam", placeholder: "bv.: Fanta, tomatensoep..." %>
	<%= f.number_field :price, label: "Prijs", placeholder: "0.00", min: "0.00", step: "0.05" %>
	<%= f.collection_radio_buttons  :category_id, @categories, :id, :name, label: "Categorie" %>	

	<%= f.submit "Maak product aan" %>

<% end %>
